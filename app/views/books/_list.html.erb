<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <td><%= user.name %></td>
      </tr> 
      <tr>
        <th>introduction</th>
        <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>
  
  <div class="row">
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{current_user.id}" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
  
  <h2 class="mt-3">New book</h2>
  <%= form_with model: book_new, url: books_path, method: :post do |f| %>
    <div class="form-group">
      <label>Title</label>
      <%= f.text_field :title, class: "form-control", value: "" %>
    </div>
    <div class="form-group">
      <label>Opinion</label>
      <%= f.text_area :body, class: "form-control", value: "" %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Book", class: "btn btn-success", data: { disable_with: "Create Book" } %>
    </div>
  <% end %>
</div>