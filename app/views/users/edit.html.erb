<main>
  <%= flash[:notice] %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User Info</h2>
        <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> errors prohibited this user from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <%= f.label :name, "Name" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
      
          <div class="form-group">
            <%= f.label :profile_image, "Image" %>
            <%= f.file_field :profile_image, class: "form-control-file user_image", accept: "image/*", placeholder: "プロフィール画像" %>
          </div>
        
          <div class="form-group">
            <%= f.label :introduction, "Introduction" %>
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
      
          <div class="form-group">
            <%= f.submit "Update User", class: "btn btn-secondary", data: { disable_with: "Update User" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>