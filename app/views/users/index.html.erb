<main>
  <%= flash[:notice] %>
  <div class="container px-5 px-sm-0">  
    <div class="row">
      <%= render 'list', book_new: @book, user: @user %>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= image_tag user.get_profile_image, size: "80x80" %>
                </td>
                <td>
                  <%= user.name %>
                </td>
                <td>
                  <%= link_to 'Show', user_path(user) %>
                </td>
                <td>
                  <%= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>